{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@application/*": ["./*"],
      "@domain/*": ["../domain/*"]
    },
    "declaration": true,
    "ignoreDeprecations": "5.0"
  },
  "references": [{ "path": "../domain" }],
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
