{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["./*"],
      "@application/*": ["../../application/*"],
      "@domain/*": ["../../domain/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "references": [
    { "path": "../../domain" },
    { "path": "../../application" }
  ],
  "include": ["repositories/**/*.ts", "services/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
